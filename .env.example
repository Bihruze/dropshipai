# =====================================================
# DropshipAI Environment Variables
# =====================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or .env to version control!
# =====================================================

# ==================== FRONTEND ====================

# Google Gemini AI API Key (required for AI content generation)
GEMINI_API_KEY=your_gemini_api_key_here

# API Base URL (for connecting frontend to backend)
VITE_API_URL=http://localhost:3001/api

# ==================== BACKEND ====================

# Server Port
PORT=3001

# Node Environment (development | production)
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Connection String (PostgreSQL recommended for production)
# For local development, you can use SQLite by changing provider in schema.prisma
DATABASE_URL="postgresql://username:password@localhost:5432/dropshipai?schema=public"

# JWT Secret - CRITICAL for security!
# In production: Use a secure random string (32+ characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_secure_random_string_in_production

# ==================== SHOPIFY ====================

# Shopify API Version
SHOPIFY_API_VERSION=2024-01

# Shopify Webhook Secret (for verifying incoming webhooks)
# Get this from your Shopify app settings
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# ==================== OPTIONAL ====================

# CJ Dropshipping API Key (for supplier integration)
CJ_API_KEY=your_cj_api_key

# Claude API Key (alternative AI provider)
CLAUDE_API_KEY=your_claude_api_key
